{
  "slide_generation": {
    "model": "gemini-1.5-pro",
    "temperature": 0.7,
    "max_tokens": 4096,
    "content_limits": {
      "regular_slide_words": "150-200",
      "graph_slide_words": "80-120",
      "enforce_limit": true,
      "truncation_strategy": "sentence-boundary"
    },
    "graph_settings": {
      "percentage_with_graphs": "30-40%",
      "default_graph_types": ["bar", "line", "pie", "scatter"],
      "chart_type_distribution": {
        "bar": 0.35,
        "line": 0.35,
        "pie": 0.2,
        "scatter": 0.1
      }
    },
    "formatting_rules": {
      "use_markdown": true,
      "bullet_points": "use for lists",
      "bold_emphasis": "use for key metrics",
      "code_blocks": "use for technical content",
      "headers": "h1 for title, h2 for sections"
    },
    "quality_guidelines": {
      "be_concise": "avoid unnecessary words",
      "use_context": "reference slide title and content",
      "data_meaningful": "ensure data relates to slide content",
      "axis_labels": "always provide descriptive axis labels",
      "units": "include units for all metrics"
    },
    "context_detection": {
      "financial": {
        "keywords": ["revenue", "profit", "cost", "price", "sales", "budget", "income", "financial"],
        "unit": "$",
        "chart_preference": ["bar", "line"],
        "data_pattern": "increasing or comparative"
      },
      "performance": {
        "keywords": ["performance", "efficiency", "productivity", "score", "rating", "kpi", "metrics"],
        "unit": "points",
        "chart_preference": ["bar", "line"],
        "data_pattern": "comparative or time-series"
      },
      "demographic": {
        "keywords": ["age", "population", "demographic", "people", "users", "customers", "persons"],
        "unit": "people",
        "chart_preference": ["bar", "pie"],
        "data_pattern": "distribution or breakdown"
      },
      "geographic": {
        "keywords": ["region", "location", "country", "city", "area", "zone", "territory"],
        "unit": null,
        "chart_preference": ["bar", "pie"],
        "data_pattern": "comparison or distribution"
      },
      "trend": {
        "keywords": ["trend", "over time", "timeline", "growth", "change", "progression"],
        "unit": "%",
        "chart_preference": ["line", "area"],
        "data_pattern": "time-series with progression"
      },
      "percentage": {
        "keywords": ["percentage", "rate", "ratio", "share", "proportion", "percent"],
        "unit": "%",
        "chart_preference": ["pie", "bar"],
        "data_pattern": "distribution or breakdown"
      }
    },
    "prompt_template": {
      "instruction": "Generate a slide deck for an educational course with proper content length enforcement",
      "content_style": "Professional, concise, and educational",
      "word_count_enforcement": "Strictly enforce word limits - graph slides MUST be 80-120 words, regular slides MUST be 150-200 words",
      "graph_strategy": "Include graphs in 30-40% of slides, cycling through bar/line/pie/scatter charts",
      "quality_standards": [
        "Clear, descriptive axis labels",
        "Appropriate units for all metrics",
        "Meaningful chart titles",
        "Bullet points for key information",
        "Markdown formatting for emphasis"
      ]
    }
  },
  "validation_rules": {
    "axis_labels": {
      "required": true,
      "min_length": 2,
      "forbidden_generic": ["value", "data", "number", "x", "y"],
      "context_aware": true
    },
    "axis_units": {
      "financial": ["$", "USD", "€", "EUR", "£", "GBP", "¥", "JPY"],
      "percentage": ["%", "percent"],
      "performance": ["points", "score", "rating"],
      "demographic": ["people", "users", "customers", "persons"],
      "time": ["years", "months", "days", "hours"],
      "quantity": ["units", "items", "count", "number"]
    },
    "data_range": {
      "check_metadata": true,
      "check_variation": true,
      "check_outliers": true,
      "outlier_threshold": 5,
      "percentage_bounds": [0, 100]
    },
    "chart_type_appropriateness": {
      "line": {
        "contexts": ["time_series", "trend"],
        "min_points": 3,
        "requires_context": true
      },
      "bar": {
        "contexts": ["comparison", "distribution"],
        "max_categories": 15,
        "requires_context": false
      },
      "pie": {
        "contexts": ["distribution", "breakdown"],
        "min_slices": 2,
        "max_slices": 8,
        "sum_check": [90, 110]
      },
      "scatter": {
        "contexts": ["correlation", "relationship"],
        "min_points": 10,
        "requires_context": true
      }
    }
  },
  "performance_targets": {
    "content_compliance": {
      "target": 95,
      "unit": "percent",
      "description": "Percentage of slides that comply with word limits"
    },
    "graph_validation": {
      "target": 90,
      "unit": "percent",
      "description": "Percentage of generated graphs that pass validation"
    },
    "axis_metadata": {
      "target": 100,
      "unit": "percent",
      "description": "Percentage of graphs with complete axis metadata"
    },
    "generation_time": {
      "target": 30,
      "unit": "seconds",
      "description": "Average time to generate a full slide deck (5-10 slides)"
    }
  },
  "tuning_parameters": {
    "temperature": {
      "value": 0.7,
      "description": "Controls randomness (0.0 = deterministic, 1.0 = creative)",
      "notes": "0.7 provides good balance between consistency and variety"
    },
    "context_window": {
      "value": 4096,
      "description": "Maximum tokens for model context",
      "notes": "Sufficient for generating 5-10 slides at a time"
    },
    "retry_policy": {
      "max_retries": 3,
      "backoff_factor": 2,
      "description": "Retry failed generation attempts with exponential backoff"
    }
  }
}
