# AURA Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME=AURA
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=your-super-secret-key-minimum-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings
# For SQLite (Development)
DATABASE_URL=sqlite:///./app.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/aura_db

# CORS Settings (Add your frontend URLs)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Settings (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@aura.edu

# AI/LLM Settings (Gemini)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1024
